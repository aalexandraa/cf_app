  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
    <%= link_to product do %>
      <%= image_tag(product.image_url, class: "image.responsive") %>
      <p><%= product.name %></p>
      <p><strong>EUR <%= product.price %></strong></p>
      <div class="product-links">
        <p><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div><!-- end product-links -->
    <% end %>
  </div><!-- end col -->
