<div class="user-management">
  <h2>Sign up here:</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: "sr-only" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email", required: "required" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "sr-only" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password", required: "required" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "sr-only" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Enter Password again" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
