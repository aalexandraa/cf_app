<div class="page-wrap">
  <div class="container">
    <div class="contact">
      <h1>Contact Info</h1>
    </div>
    <div class="row">
      <div class="col-md-4 col-xs-12" id="contact-details">
        <div class="phone">
          <h2><span class="glyphicon glyphicon-glyphicon glyphicon-phone-alt"></span><br>call us:</h2>
            <p>(0049) 30 90 20 700</p>
        </div><!--end phone-->
        <div class="adress">
          <h2><span class="glyphicon glyphicon-glyphicon glyphicon-pencil"></span><br>write us:</h2>
          <p>Bike Berlin <br> Berliner Strasse 80 <br> 50505 Berlin</p>
        </div><!--end adress-->
        <div class="e-mail">
          <h2><span class="glyphicon glyphicon-glyphicon glyphicon-envelope"></span><br>mail us:</h2>
          <p>contact@bikeberlin.com</p>
        </div><!--end e-mail-->
      </div>

      <%= flash[:notice] %>
      <div class="col-md-8 col-xs-12" id="contact-form">
        <%= form_tag("/static_pages/thank_you") do %>
        <div class="form-group">
          <%= label_tag :name %>
          <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", required: "required" %>
        </div>
        <div class="form-group">
          <%= label_tag :email, "E-mail Address" %>
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", required: "required" %>
        </div>
        <div class="form-group">
          <%= label_tag :message %>
          <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message", required: "required" %>
        </div>
        <%= submit_tag "Send", class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
